<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/light_brown_square"
    app:layout_constraintCircleRadius="50dp">

    <ImageView
        android:id="@+id/book_card_image"
        android:layout_width="140dp"
        android:layout_height="160dp"

        android:paddingTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/book_card_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/book_card_name"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:text="Название книги"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center"

        android:textColor="@color/grey_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_card_image" />

</androidx.constraintlayout.widget.ConstraintLayout>